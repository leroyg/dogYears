//setting for age variable
let myAge = 41;

// set variable for early years
let earlyYears = 2;

// transform and calc early years
earlyYears = earlyYears * 10.5;
console.log(earlyYears);

// updating and accounting for early years
laterYears = myAge - 2;
console.log(laterYears);

// dog years later update
laterYears *= 4;
console.log(laterYears);
console.log(earlyYears);

// my combined results generate my dog years
myAgeInDogYears = earlyYears + laterYears;

// setting my name as a variable and transforming to string.
myName = ('LeRoy').toLowerCase()
console.log(myName)

console.log(`My name is ${myName}. I am ${myAge} years old in human years which is ${myAgeInDogYears} years old in dog years.`)

